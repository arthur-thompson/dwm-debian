# Reload functions
super + Escape
	"$XDG_CONFIG_HOME"/sxhkd/functions

# brightness down
XF86MonBrightnessDown
	brightnessctl set 5%-

# brightness up
XF86MonBrightnessUp
 	brightnessctl set +5%

# brightness down
super + XF86MonBrightnessDown
 	brightnessctl set 1%-

# brightness up
super + XF86MonBrightnessUp
	brightnessctl set +1%

#Volume Control
XF86AudioLowerVolume
	amixer set Master 5%-

XF86AudioRaiseVolume
	amixer set Master 5%+

XF86AudioMute
        amixer set Master toggle
